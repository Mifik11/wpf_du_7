<Application x:Class="wpf_du_7.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:wpf_du_7"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Brush x:Key="CorporateBlue">#2c698d</Brush>
            <Brush x:Key="CorporateWhite">#e4eaff</Brush>
            <Brush x:Key="CorporateDarkBlue">#1b1f2f</Brush>
            <Brush x:Key="CorporateLightBlue">#c9d5ff</Brush>
            <Style x:Key="CorporateButton" TargetType="Button">
                <Setter Property="Background" Value="#1b1f2f" />
                <Setter Property="Foreground" Value="#e4eaff" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
